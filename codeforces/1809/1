#include <bits/stdc++.h>

#define int long long

using namespace std;

int bb(int k) {
	int i = 1;
	for(; i*(i+1)/2 <= k; i++) {}
	
	return i-1;	
}

void solve() {
	int n, k;
	cin >> n >> k;
	vector<int> intervalos;

	while(k) {
		int s = bb(k);
		k -= s;
		intervalos.emplace_back(s);
	}

	vector<int> ans;
	for(auto inter: intervalos) {
		for(int i = 0; i < inter; i++) {
			ans.push_back(1);
		}
		if(ans.size() + 1 < n) 
			ans.push_back(-1000);
	}
	while(ans.size() < n) ans.push_back(-1000);

	for(auto el: ans) cout << el << ' '; cout << endl;
}

signed main() {
	cin.tie(0)->sync_with_stdio(false);

	int t=1;
	cin >> t;
	while(t--) solve();
}
