#include <bits/stdc++.h>

#define int long long

using namespace std;

signed main() {
    cin.tie(0)->sync_with_stdio(false);

    int n, p; 
    string s;
    cin >> n >> p >> s;
    reverse(s.begin(), s.end());

    vector<int> psum(n);
    int base = 1;
    int ans = 0;
    map<int,int> lembra;

    for(int i = 0; i < n; i++) {
        psum[i] = (base * (s[i]-'0'))%p;
        if(i) psum[i] = (psum[i] + psum[i-1])%p;
        ans += lembra[psum[i]];
        lembra[psum[i]]++;    
    }

    int brute = 0;
    for(int i = 0; i < n; i++) {
        for(int j = i; j < n; j++) {
            if(i && (psum[j]-psum[i-1] + p)%p == 0) {
                cout << j <<  ' ' << i << '\n';
                brute++;
            }else if(i == 0 && psum[j]%p == 0) {
                cout << j << endl;
                brute++;
            }
        }
    }

    cout << "brute = " << brute << endl;
    cout << ans << endl;



}
